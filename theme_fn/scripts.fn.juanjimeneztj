
<?php

// Function to register stylesheets and javascripts
function juanjimeneztj_cssjs() {
    wp_enqueue_style( 'juanjimeneztj-style', get_template_directory_uri() . '/css/styles.css' );
    wp_enqueue_script( 'juanjimeneztj-js', get_template_directory_uri() . '/js/scripts.js', array( 'jquery' ), '', true );
}
add_action( 'wp_enqueue_scripts', 'juanjimeneztj_cssjs' );